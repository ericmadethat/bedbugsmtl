# EditorConfig: http://editorconfig.org/

root = true

# Set default charset
[*.{css,js,php,scss}]
charset = utf-8

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# CSS style guide
[*.{css,scss}]
indent_style = space
indent_size = 2

# Javascript style guide
[*.{js,json}]
indent_style = space
indent_size = 2

# PHP style guide
[*.php]
indent_style = space
indent_size = 4
